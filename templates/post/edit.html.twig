{% extends 'base.html.twig' %}

{% block title %}Gestion de la publication{% endblock %}
{% block header %}
    <!-- Page Header-->
    <header class="masthead" style="background-image: url('/img/rickmorty-toilette.webp')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="post-heading">
                        <h1>Modification d'un article</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}
{% block body %}

    <h1>Modifier une Publication</h1>
    <a href="{{ path('app_posts') }}" class="btn btn-primary btn-sm">
        <i class="bi bi-eye"></i> Retour à la liste
    </a>
    <div class="container mt-5">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h2 class="text-center">Gestion de la Publication</h2>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                
                <div class="mb-3">
                    {{ form_label(form.title, 'Titre', { 'label_attr': { 'class': 'form-label' } }) }}
                    <p  class="text-pre-wrap">{{ form_widget(form.title, { 'attr': { 'class': 'form-control' } }) }}</p>
                    <div class="text-danger">
                        {{ form_errors(form.title) }}
                    </div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.content, 'Contenu', { 'label_attr': { 'class': 'form-label' } }) }}
                    {{ form_widget(form.content, { 'attr': { 'class': 'form-control', 'rows': 5 } }) }}
                    <div class="text-danger">
                        {{ form_errors(form.content) }}
                    </div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.picture, 'Image (URL ou Téléchargement)', { 'label_attr': { 'class': 'form-label' } }) }}
                    {{ form_widget(form.picture, { 'attr': { 'class': 'form-control' } }) }}
                    <div class="text-danger">
                        {{ form_errors(form.picture) }}
                    </div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.category, 'Catégorie', { 'label_attr': { 'class': 'form-label' } }) }}
                    {{ form_widget(form.category, { 'attr': { 'class': 'form-control' } }) }}
                    <div class="text-danger">
                        {{ form_errors(form.category) }}
                    </div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.user, 'Auteur', { 'label_attr': { 'class': 'form-label' } }) }}
                    {{ form_widget(form.user, { 'attr': { 'class': 'form-control' } }) }}
                    <div class="text-danger">
                        {{ form_errors(form.user) }}
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100">Enregistrer</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

{% endblock %}
