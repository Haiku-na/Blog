
{% extends 'base.html.twig' %}
{% block header %}
    <!-- Page Header-->
    <header class="masthead" style="background-image: url('/img/utilisateur.avif')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="post-heading">
                        <h1>Gestion des utilsateurs</h1>
                        <h2 class="subheading">Articles de l'utilisateur</h2>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}



{% block title %}Posts de {{ user.firstName }} {{ user.lastName }}{% endblock %}

{% block body %}
    <h1>Liste des posts de {{ user.firstName }} {{ user.lastName }}</h1>

    {% if posts is not empty %}
        <ul>
            {% for post in posts %}
                <li>
                    <strong>{{ post.title }}</strong><br>
                    {{ post.content|slice(0, 100) }}...<br>
                    <a href="{{ path('app_post', { id: post.id }) }}">Voir le post complet</a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucun post trouvé pour cet utilisateur.</p>
    {% endif %}
    
    <a href="{{ path('app_users') }}" class="btn btn-primary">Retour à la liste des utilisateurs</a>
{% endblock %}






